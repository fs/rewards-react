{
  "env": {
    "jest": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "globals": {
    "document": true,
    "localStorage": true,
    "window": true,
    "navigator": true,
    "fetch": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": [2, { "ignore": ["children"] }],
    "global-require": "warn",
    "no-underscore-dangle": [2, { "allow": [ "__STORE__" ] }],
    "jsx-a11y/label-has-for": [ 1, {
      "components": [ "Label" ],
      "required": {
          "every": [ "nesting", "id" ]
      },
      "allowChildren": false
    }],
    "max-len": 0
  }
}
